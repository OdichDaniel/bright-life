<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PhoneAuthActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:titleMarginStart="@dimen/sixteen"
        app:titleTextColor="@color/colorWhite" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:padding="@dimen/sixteen"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="@dimen/four"
        app:cardElevation="@dimen/five"
        app:contentPadding="@dimen/eight">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/success_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sixteen"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/image_tick"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/sixteen"
                    android:src="@drawable/ic_tick_done" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/fifty"
                    android:layout_marginBottom="@dimen/twenty"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/ten"
                    android:text="@string/verification_success_message"
                    android:textColor="@color/colorGreen"
                    android:textSize="@dimen/txt_sixteen" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/verrification_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/fifty"
                    android:layout_marginBottom="@dimen/twenty"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/ten"
                    android:text="@string/verification_message"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/txt_sixteen" />
                <com.wang.avi.AVLoadingIndicatorView
                    android:id="@+id/indicator_loader"
                    android:layout_width="@dimen/seventy_five"
                    android:layout_height="@dimen/thirty"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/sixteen"
                    android:visibility="gone"
                    app:indicatorColor="@color/colorSecondary" />

                <LinearLayout
                    android:id="@+id/phone_verification_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/et_phone_number"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/sixteen"
                        android:background="@drawable/edit_text_background"
                        android:cursorVisible="true"
                        android:elevation="10dp"
                        android:fontFamily="@font/poppins_regular"
                        android:hint="Phone number"
                        android:inputType="phone"
                        android:padding="10sp"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="#9F9F9F"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btn_send_number"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_below="@+id/layout_location"
                        android:layout_marginLeft="@dimen/sixteen"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="@dimen/sixteen"
                        android:layout_marginBottom="40dp"
                        android:background="@drawable/round_button_solid_background"
                        android:fontFamily="@font/poppins_regular"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:padding="@dimen/eight"
                        android:text="Verify phone number"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/verification_code_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/et_verification_code"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/sixteen"
                        android:background="@drawable/edit_text_background"
                        android:cursorVisible="true"
                        android:elevation="10dp"
                        android:fontFamily="@font/poppins_regular"
                        android:hint="Enter Verification code"
                        android:inputType="phone"
                        android:padding="10sp"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="#9F9F9F"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btn_verify_code"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_below="@+id/layout_location"
                        android:layout_marginLeft="@dimen/sixteen"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="@dimen/sixteen"
                        android:layout_marginBottom="40dp"
                        android:background="@drawable/round_button_solid_background"
                        android:fontFamily="@font/poppins_regular"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:padding="@dimen/eight"
                        android:text="Verify code"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>