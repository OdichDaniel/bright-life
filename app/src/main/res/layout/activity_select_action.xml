<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SelectActionActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background_image" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#90000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image"
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo" />

        <LinearLayout
            android:id="@+id/layout_first_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:visibility="gone">

            <Button
                android:id="@+id/btn_become_an_agent"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@+id/layout_location"
                android:layout_marginLeft="@dimen/sixteen"
                android:layout_marginRight="@dimen/sixteen"
                android:background="@drawable/round_button_solid_background"
                android:fontFamily="@font/poppins_regular"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:padding="@dimen/eight"
                android:text="Become an Agent"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="13sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_go_to_login_activity"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@+id/layout_location"
                android:layout_marginLeft="@dimen/sixteen"
                android:layout_marginTop="@dimen/sixteen"
                android:layout_marginRight="@dimen/sixteen"
                android:background="@drawable/round_button_solid_background_color_secondary"
                android:fontFamily="@font/poppins_regular"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:padding="@dimen/eight"
                android:text="Login"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_resume_application"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/layout_location"
            android:layout_marginLeft="@dimen/sixteen"
            android:layout_marginTop="@dimen/sixteen"
            android:layout_marginRight="@dimen/sixteen"
            android:background="@drawable/round_button_solid_background_color_secondary"
            android:fontFamily="@font/poppins_regular"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:padding="@dimen/eight"
            android:text="RESUME APPLICATION"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="13sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/twenty"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center_horizontal"
            android:text="Need Help?"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/txt_eleven" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:id="@+id/card_check_application_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_policy"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/sixteen"
        android:layout_marginBottom="@dimen/fifty"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:elevation="12dp"
        android:visibility="visible"
        app:cardBackgroundColor="#99FFFFFF"
        app:cardCornerRadius="@dimen/five"
        app:contentPadding="@dimen/sixteen">

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="Check application status"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/txt_sixteen"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txt_policy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/twenty"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center_horizontal"
        android:text="Privacy Policy | Terms and Conditions"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/txt_eleven" />

</RelativeLayout>