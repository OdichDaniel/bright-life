<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.RequirementActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:title="Agent Requirements"
        app:titleMarginStart="@dimen/sixteen"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:titleTextColor="@color/colorWhite" />
    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/toolbar"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:padding="@dimen/sixteen"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardCornerRadius="@dimen/four"
                app:cardElevation="@dimen/five"
                app:contentPadding="@dimen/eight">

                <LinearLayout
                    android:padding="@dimen/sixteen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/twenty"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center_horizontal"
                        android:padding="@dimen/ten"
                        android:text="@string/requirement"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/txt_fourteen" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorText" />

                    <LinearLayout
                        android:padding="@dimen/eight"
                        android:background="@drawable/edit_text_background"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/sixteen"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_card"/>
                        <TextView
                            android:textSize="@dimen/txt_sixteen"
                            android:layout_marginLeft="@dimen/twenty"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorText"
                            android:text="National Identity Card"
                            android:fontFamily="@font/poppins_regular"/>

                    </LinearLayout>
                    <LinearLayout
                        android:padding="@dimen/eight"
                        android:background="@drawable/edit_text_background"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/sixteen"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_file"/>
                        <TextView
                            android:textSize="@dimen/txt_sixteen"
                            android:layout_marginLeft="@dimen/twenty"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorText"
                            android:text="Bank Account Details"
                            android:fontFamily="@font/poppins_regular"/>

                    </LinearLayout>
                    <LinearLayout
                        android:padding="@dimen/eight"
                        android:background="@drawable/edit_text_background"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/sixteen"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_file"/>
                        <TextView
                            android:textSize="@dimen/txt_sixteen"
                            android:layout_marginLeft="@dimen/twenty"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorText"
                            android:text="Academic Papers"
                            android:fontFamily="@font/poppins_regular"/>

                    </LinearLayout>
                    <LinearLayout
                        android:padding="@dimen/eight"
                        android:background="@drawable/edit_text_background"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/sixteen"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_file"/>
                        <TextView
                            android:textSize="@dimen/txt_sixteen"
                            android:layout_marginLeft="@dimen/twenty"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorText"
                            android:text="Curriculum Vitae"
                            android:fontFamily="@font/poppins_regular"/>

                    </LinearLayout>
                    <LinearLayout
                        android:padding="@dimen/eight"
                        android:background="@drawable/edit_text_background"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/sixteen"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_file"/>
                        <TextView
                            android:textSize="@dimen/txt_sixteen"
                            android:layout_marginLeft="@dimen/twenty"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorText"
                            android:text="Recommendation Letter"
                            android:fontFamily="@font/poppins_regular"/>

                    </LinearLayout>
                    <LinearLayout
                        android:padding="@dimen/eight"
                        android:background="@drawable/edit_text_background"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/sixteen"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_file"/>
                        <TextView
                            android:textSize="@dimen/txt_sixteen"
                            android:layout_marginLeft="@dimen/twenty"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorText"
                            android:text="L.C.1 Letter"
                            android:fontFamily="@font/poppins_regular"/>

                    </LinearLayout>

                    <TextView
                        android:textSize="@dimen/sixteen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Eligibility"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/colorText"
                        android:layout_marginTop="@dimen/sixteen"/>
                    <LinearLayout
                        android:padding="@dimen/eight"
                        android:background="@drawable/edit_text_background"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_card"/>
                        <TextView
                            android:textSize="@dimen/txt_sixteen"
                            android:layout_marginLeft="@dimen/twenty"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorText"
                            android:text="Ugandan by nationality"
                            android:fontFamily="@font/poppins_regular"/>

                    </LinearLayout>
                    <LinearLayout
                        android:padding="@dimen/eight"
                        android:background="@drawable/edit_text_background"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/sixteen"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_card"/>
                        <TextView
                            android:textSize="@dimen/txt_sixteen"
                            android:layout_marginLeft="@dimen/twenty"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorText"
                            android:text="18+ years"
                            android:fontFamily="@font/poppins_regular"/>

                    </LinearLayout>
                    <Button
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:id="@+id/btn_confirm"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_below="@+id/layout_location"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/round_button_solid_background"
                        android:fontFamily="@font/poppins_regular"
                        android:padding="@dimen/eight"
                        android:text="Confirm"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>
</LinearLayout>