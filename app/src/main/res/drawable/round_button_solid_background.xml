<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">

        <shape>
            <stroke android:width="2dp" android:color="#018BEC" />
            <corners android:radius="50dp" />
            <padding android:bottom="15dp" android:left="15dp" android:right="15dp" android:top="15dp" />
            <solid android:color="#018BEC"></solid>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <stroke android:width="2dp" android:color="@color/colorGrey" />
            <corners android:radius="50dp" />
            <padding android:bottom="15dp" android:left="15dp" android:right="15dp" android:top="15dp" />
            <solid android:color="@color/colorGrey"></solid>
        </shape>

    </item>

    <item>

        <shape>
            <stroke android:width="2dp" android:color="#018BEC" />
            <corners android:radius="50dp" />
            <padding android:bottom="15dp" android:left="15dp" android:right="15dp" android:top="15dp" />
            <solid android:color="#018BEC"></solid>
        </shape>

    </item>
</selector>